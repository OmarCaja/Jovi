---
import Banner from "../components/Banner.astro";
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/pages/Index.less";
---

<MainLayout>
	<section
		class="main-section flex align-items height"
		style="--align: center; --height: 100vh"
	>
		<div
			class="blur-background flex width flex-direction align-items"
			style="--width: 100%; --direction: column; --align: center"
		>
			<h1>Taberna Jovi</h1>
			<h5>
				Lorem ipsum dolor sit amet consectetur, adipisicing elit. Harum,
				explicabo.
			</h5>
		</div>
	</section>
	<section
		class="flex flex-wrap height gap"
		style="--height: 700px; --gap: 10px"
	>
		<Banner
			title="Cócteles"
			subtitle="Descubre nuestros cócteles"
			background="/Jovi/cocktail.jpg"
		/>
		<Banner
			title="Tapas"
			subtitle="Prueba nuestras tapas"
			background="/Jovi/sandwich.jpg"
		/>
	</section>
	<section id="map">
		<iframe
			src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d763.221848468746!2d-2.129955070759449!3d40.07792382488547!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd5d6773c42f0e43%3A0xeac1185749e9fcb8!2sTaberna%20Jovi!5e0!3m2!1sen!2ses!4v1679147307798!5m2!1sen!2ses"
			width="100%"
			height="450"
			style="border: 0"
			loading="eager"
			referrerpolicy="no-referrer-when-downgrade"></iframe>
	</section>
</MainLayout>
