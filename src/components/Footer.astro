---
import "../styles/components/Footer.less";
---

<footer
	id="footer"
	class="flex align-items justify-content"
	style="--align: center; --justify: center"
>
	<div
		class="footer-container width flex align-items justify-content"
		style="--width: 70%; --align: start; --justify: space-around"
	>
		<p>Made with <i class="fa-solid fa-heart"></i> in Cuenca</p>
		<div
			class="flex flex-direction gap"
			style="--direction: column; --gap: 20px"
		>
			<p>Síguenos en:</p>
			<div class="flex gap" style="--gap: 10px">
				<a href="#" class="fa-brands fa-facebook"></a>
				<a href="#" class="fa-brands fa-instagram"></a>
			</div>
		</div>
		<div
			class="flex flex-direction gap"
			style="--direction: column; --gap: 20px"
		>
			<p>Contacto:</p>
			<div
				class="flex align-items gap"
				style="--align: center; --gap: 10px"
			>
				<a href="#" class="fa-solid fa-phone"></a>
				<p>969 21 42 84</p>
			</div>
			<div
				class="flex align-items gap"
				style="--align: center; --gap: 10px"
			>
				<a href="#" class="fa-solid fa-location-dot"></a>
				<p>C/ Colmillo nº 10</p>
			</div>
		</div>
		<a href="/"><img class="logo" src="/logo.png" alt="Logo"></a>
	</div>
</footer>
