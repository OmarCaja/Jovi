---
import type { DrinkSectionItem } from "../../types/drinks/drinkSection";
import Drink from "./Drink.astro";

import "../../styles/components/drinks/DrinkSection.less";

interface Props {
	drinkSection: DrinkSectionItem;
}

const { drinkSection } = Astro.props;
---

<section id={drinkSection.id} class="drink-section" style="display: none;">
	<h2>{drinkSection.tittle}</h2>
	<ul class="flex">
		{drinkSection.drinks.map((drink) => <Drink drink={drink} />)}
	</ul>
</section>
