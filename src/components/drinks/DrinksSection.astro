---
import type { DrinksSectionItem } from "@customTypes/drinks/drinksSectionItem";

import Drink from "@components/drinks/Drink.astro";

import "@styles/components/drinks/DrinkSection.less";
import type { DrinkItem } from "~/types/drinks/drinkItem";

interface Props {
  drinkSection: DrinksSectionItem;
}

const { drinkSection } = Astro.props;
---

<li>
  <section id={drinkSection.id} class="drink-section" style="display: none;">
    <h2>{drinkSection.tittle}</h2>
    <ul class="flex">
      {drinkSection.drinks.map((drink: DrinkItem) => <Drink drink={drink} />)}
    </ul>
  </section>
</li>
